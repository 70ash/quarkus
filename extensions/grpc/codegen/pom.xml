                </dependency>
                <dependency>
                    <groupId>io.grpc</groupId>
                    <artifactId>protoc-gen-grpc-java</artifactId>
                    <classifier>linux-x86_32</classifier>
                    <type>exe</type>
                </dependency>
            </dependencies>
        </profile>

