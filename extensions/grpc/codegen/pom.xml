                <dependency>
                    <groupId>io.grpc</groupId>
                    <artifactId>protoc-gen-grpc-java</artifactId>
                    <classifier>linux-ppcle_64</classifier>
                    <type>exe</type>
                </dependency>
            </dependencies>
        </profile>

        <!-- Linux s390 64-bit -->
        <profile>
            <id>linux-s390x</id>
            <activation>
