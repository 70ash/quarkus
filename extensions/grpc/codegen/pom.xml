                    <classifier>linux-s390_64</classifier>
                    <type>exe</type>
                </dependency>
            </dependencies>
        </profile>

        <!-- Linux x86 32-bit -->
        <profile>
            <id>linux-x86_32</id>
            <activation>
                <os>
                    <name>Linux</name>
                    <family>unix</family>
                    <arch>x86</arch>
                </os>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.google.protobuf</groupId>
                    <artifactId>protoc</artifactId>
                    <classifier>linux-x86_32</classifier>
